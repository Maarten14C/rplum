Package: rplum
Type: Package
Title: Bayesian Age-Depth Modelling of Cores Dated by Pb-210
Version: 0.2.3
Authors@R: c(
    person("Maarten", "Blaauw", email = "maarten.blaauw@qub.ac.uk", role = c("aut", "cre"), comment = c(ORCID = "0000-0002-5680-1515")),
